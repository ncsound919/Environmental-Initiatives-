# ECOS Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL="postgresql://ecos:ecos_password@localhost:5432/ecos_db"

# JWT Secret for Authentication
ECOS_JWT_SECRET="your-secret-key-here-change-in-production"

# MQTT Broker Configuration
MQTT_BROKER_HOST="localhost"
MQTT_BROKER_PORT="1883"
MQTT_USERNAME="ecos_iot"
MQTT_PASSWORD="change_me_in_production"

# API Configuration
API_HOST="0.0.0.0"
API_PORT="8000"
NODE_ENV="development"

# Stripe Configuration (for Level 2 Billing)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Auth0 Configuration (for Level 2 Authentication)
AUTH0_DOMAIN="your-tenant.auth0.com"
AUTH0_CLIENT_ID="your_client_id"
AUTH0_CLIENT_SECRET="your_client_secret"

# SaaS Tier Configuration (JSON override)
# SAAS_TIERS_JSON='{"free": {...}, "pro": {...}, "enterprise": {...}}'

# Deployment Zone Configuration
REGENCITY_ZONE_A="Living"
REGENCITY_ZONE_B="Infrastructure"
REGENCITY_ZONE_C="Agriculture"
REGENCITY_ZONE_D="Research"
