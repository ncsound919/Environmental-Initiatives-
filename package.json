{
  "name": "ecos-monorepo",
  "version": "1.0.0",
  "description": "ECOS Unified Ecosystem - 13 Environmental Businesses",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "cd packages/core/database-schema && npx prisma generate",
    "db:migrate": "cd packages/core/database-schema && npx prisma migrate dev",
    "db:studio": "cd packages/core/database-schema && npx prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
